<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>example</groupId>
    <artifactId>project</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>project</name>
    <url>http://maven.apache.org</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
        </dependency>
        <dependency>
            <groupId>info.cukes</groupId>
            <artifactId>cucumber-java</artifactId>
            <version>1.2.5</version>
        </dependency>
        <dependency>
            <groupId>info.cukes</groupId>
            <artifactId>cucumber-junit</artifactId>
            <version>1.2.5</version>
        </dependency>
        <!-- https://mvnrepository.com/artifact/info.cukes/cucumber-picocontainer -->
	 	<dependency>
    		<groupId>info.cukes</groupId>
    		<artifactId>cucumber-picocontainer</artifactId>
    		<version>1.2.4</version>
   	 		<scope>test</scope> 
		</dependency> 
        
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>com.soebes.maven.plugins</groupId>
                <artifactId>multienv-maven-plugin</artifactId>
                <version>0.3.1</version>
                <configuration>
            		<archive>
            			<manifest>
                			<mainClass>
                    		Runner.TestMethods
                			</mainClass>
            			</manifest>
            		</archive>
					</configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>environment</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <finalName>Dependencies</finalName>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>Runner.TestMethods</mainClass>
                            <classpathPrefix>dependency-jars/</classpathPrefix>
                        </manifest>
                    </archive>
                    <outputDirectory>${user.dir}/demo/Dependencies/lib/</outputDirectory>
                </configuration>
            </plugin>
            <!-- This plugin is only required to run the code from your eclipse. Don't Commit below cofiguration to GIT, otherwise it will fail the build in Team city  -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>validate</phase>
                        <configuration>
                            <target>
                                <echo>ANT TASK - copying config files....</echo>
                                copying config folder and it's content into Base directory. It is only for running from eclipse. 
                                <copy todir="${basedir}/config" overwrite="true" flatten="true"><fileset dir="${basedir}/src/main/environments/local/config" includes="*.*"><include name="*.*" /></fileset></copy></target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
             </plugin>
 <!--            <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${user.dir}/install/Dependencies/libs/</outputDirectory>
							<excludeScope>provided</excludeScope>
						</configuration>
					</execution>
				</executions>
			</plugin>  -->
  		<plugin>
			<artifactId>maven-assembly-plugin</artifactId>
			<executions>
				<execution>
					<id>TestFast-zip</id>
					<phase>package</phase>
					<goals>
						<goal>single</goal>
					</goals>
					<configuration>
					 <archive>
            			<manifest>
                			<mainClass>
                    		Runner.TestMethods
                			</mainClass>
            			</manifest>
            		</archive>
						<descriptor>src/main/java/example/project/Test.xml</descriptor>
					</configuration>
				</execution>
			</executions>
		</plugin>
        </plugins>
    </build>
    <description>mvn test -Dcucumber.options=&quot;--tags @your_tag&quot;

OR

clean install</description>
</project>